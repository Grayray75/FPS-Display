{
    "schemaVersion": 1,
    "id": "fpsdisplay",
    "version": "${version}",
    "name": "FPS-Display",
    "description": "A simple Fabric mod that displays the current FPS on screen.",
    "authors": [
        "Grayray75"
    ],
    "contact": {
        "homepage": "https://github.com/Grayray75/FPS-Display",
        "sources": "https://github.com/Grayray75/FPS-Display",
        "issues": "https://github.com/Grayray75/FPS-Display/issues"
    },
    "license": "LGPL-3.0-only",
    "icon": "assets/fpsdisplay/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "io.grayray75.mods.fpsdisplay.FpsDisplayMod"
        ],
        "modmenu": [
            "io.grayray75.mods.fpsdisplay.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "fpsdisplay.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14.0",
        "minecraft": "${mcversion}",
        "legacy-fabric-keybinding-api-v1-common": "*",
        "legacy-fabric-lifecycle-events-v1-common": "*"
    },
    "suggests": {
        "modmenu": "*"
    },
    "custom": {
        "modmenu:clientsideOnly": true
    }
}
